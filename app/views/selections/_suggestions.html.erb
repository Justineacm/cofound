<section data-filter-target="suggestionsContainer">
  <% if session[:suggestions] == true %>
    <h3><%= pluralize( suggestions.count, 'match' )%></h3>
  <% end %>
  <% unless session[:suggestions] == true %>
    <div class= "container-matches", style="background-image: linear-gradient(rgba(0,0,0,0.0),rgba(0,0,0,0.0)), url(<%= image_path 'matches.jpg'%>);">
        <%= form_with url: suggestions_dashboards_path, class:"form-check form-switch", method: :get do |form| %>
          <%= form.submit "Generate Matches", class: "btn-cta"%>
        <% end %>
    </div>
  <% else %>
    <div class = "align-items-center">
      <%= form_with url: filtered_suggestions_dashboards_path, class:"form-check form-switch", method: :get, data: {filter_target: "form"} do |form| %>
        <%= form.check_box :project, class:"form-check-input", type:"checkbox", role:"switch", id:"flexSwitchCheckChecked", data: {action: "change->filter#submit"}, checked: has_project.is_a?(String) %>
        <%= form.label :project, "I want profiles with projects only", class:"form-check-label", for:"flexSwitchCheckChecked" %>
      <% end %>
      <div class="main">
        <%= render partial: "shared/card-user-matches", locals: {users: suggestions, has_project: has_project} %>
      </div>
    </div>
  <% end %>
</section>

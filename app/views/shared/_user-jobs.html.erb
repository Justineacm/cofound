<h3>Work experiences</h3>
<% @user.jobs.each do |job| %>
  <div class="timeline">
    <div class="entry">
      <div class="title">
        <h5> <%= job.start_date.year %> â€¢ <%= job.end_date.year %></h5>
        <ul>
          <li><%= job.title %> </li>
          <li><%= job.company.industry %> </li>
          <li><%= job.city %> </li>
          <li class="mt-1"><%= image_tag job.logo, class:"avatar-logo align-text"%> </li>
        </ul>
      </div>
      <div class="body list-unstyled">
        <p><%= job.description %></p>
        <ul class="list-unstyled">
          <% if job.year_experience > 0 %>
            <li><%= job.year_experience %> years of work experience </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<div class="menu_vertical">
  <ul>

    <%= link_to params[:has_project].present? ? matches_dashboards_path(has_project: params[:has_project]) : :back, class:"text-decoration-none" do %>
      <li class="btn-circle-back"></li><p class="mb-5">Back</p>
    <% end %>

    <%= link_to matches_dashboards_path, class:"text-decoration-none text-center" do %>
      <% if action_name == "matches" %>
      <li class="btn-circle-matches-current"></li><p class="mb-5 orange-color">Matches</p>
      <% else %>
      <li class="btn-circle-matches"></li><p class="mb-5">Matches</p>
      <% end %>
    <% end %>

    <%= link_to messages_dashboards_path, class:"text-decoration-none text-center" do %>
      <li class="btn-circle-message"></li><p class="mb-5">Chat</p>
    <% end %>

    <%= link_to project_dashboards_path, class:"text-decoration-none text-center" do %>
      <li class="btn-circle-project"></li><p class="mb-5">Project</p>
    <% end %>

    <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class:"text-decoration-none text-center" do%>
      <li class="btn-circle-log-out"></li><p class="mb-5">Log out</p>
    <% end %>
  </ul>
</div>

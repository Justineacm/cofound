<div class="main" >
  <div class="profil-content profil-content-matches" data-controller="filter matchloader" >
    <%= render "selections/suggestions", session: session, suggestions: @suggestions, has_project: params[:has_project] %>
    <div class="mt-5 mb-3">
      <h3> <%= pluralize( @matched_profiles.count, 'matched cofounder' )%></h3>
    </div>
    <div class="main-content">
      <%= render partial: "shared/card-user", locals: { users: @matched_profiles } %>
    </div>

    <div class="mt-5 mb-3">
      <h3><%= pluralize( @pending_requests.count, 'pending request' )%></h3>
    </div>
    <div class="main-content">
      <%= render partial: "shared/card-user", locals: {users: @pending_requests} %>
    </div>

    <%# <div id="btn-scrollUp">
      <a href="#top"><i class="fa-solid fa-arrow-up"></i></a>
    </div> %>
    <div id="loader" class="d-none">
      <span class="loader row"></span>
    </div>
  </div>
</div>

<% content_for :meta_title, "#{@user.first_name} is on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, @user.description %>
<% content_for :meta_image, image_path(@user.photo) %>

<div class="main">
  <div class="profil-content-show">
    <div class="main-content-show">
      <h3>Highlights</h3>
      <hr>
      <div class="list-unstyled list-inline">
        <li class="btn-tag list-inline-item"><%= image_tag "xp.svg", class: "tag-icon"%> <%= @current_user.total_experience%> years experience</li>
        <li class="btn-tag list-inline-item"><%= image_tag "cross.svg", class: "tag-icon"%> <%= @current_user.mbti %></li>
        <li class="btn-tag list-inline-item"><%= image_tag "skill.svg", class: "tag-icon"%> <%= @current_user.language_list %></li>
        <li class="btn-tag list-inline-item"><%= image_tag "language.svg", class: "tag-icon"%> <%= @current_user.expertise_list %></li>
      </div>
    </div>

    <%#= render "shared/user-sidebar-show" %>

    <% if @current_user.selection_for(@user).accepted? %>
      <div class="chatroom">
        <%= render "shared/chatroom2", selection: @selection, message: @message, user: @user %>
      </div>
    <% end %>
    <div class="main-content-project">
      <%= render "shared/user-jobs" %>
    </div>
    <%# <div class="main-content-project">
      <%= render "shared/user-schools" %>
    <%# </div> %>
    <div class="main-content-project">
        <% if @user.has_a_project %>
        <%= render "shared/user-project" %>
        <% end %>
    </div>
  </div>
</div>
